<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>Home Page</title>
    <style>
      body {
        font-family: Arial, Helvetica, sans-serif;
      }
      h1 {
        margin-left: 10px;
      }
      div{
        margin: 10px;
      }
      table {
        border-spacing: 20px 10px; /* horizontal gap, vertical gap */
      }
    </style>
  </head>
  <body>
    <h1>URL Shortener</h1>

    <div>
      <form method="POST" action="/url">
        <label>Enter your URL</label>
        <br/>
        <input 
          type="text" 
          name="url"
          placeholder="https://example.com"
        />
        <button type="submit">Generate</button>
      </form>
    </div>

    <% if (locals.msg && locals.existingId) { %>
      <p style="color: red;">
        <%= msg %>:
        <a href="http://localhost:8001/url/<%= existingId %>" target="_blank">
          http://localhost:8001/url/<%= existingId %>
        </a>
      </p>
    <% } else if (locals.id) { %>
      <p>
        Short URL Generated: 
        <a href="http://localhost:8001/url/<%= id %>" target="_blank">
          http://localhost:8001/url/<%= id %>
        </a>
       </p>
    <% } %>

    <br/>
    
    <div>
      <% if(locals.urls) { %> 
        <table>
          <thead>
            <tr>
              <th>S. No</th>
              <th>ShortId</th>
              <th>Redirect</th>
              <th>Clicks</th>
            </tr>
          </thead>
          <tbody>
            <% urls.forEach((url, index) => { %>
              <tr>
                <td><%= index + 1 %></td>
                <td><%= url.shortId %></td>
                <td><%= url.redirectURL %></td>
                <td><%= url.visitHistory.length %></td>
              </tr>
            <% }) %>
          </tbody>
        </table>
      <% } %>
    </div>
  </body>
</html>